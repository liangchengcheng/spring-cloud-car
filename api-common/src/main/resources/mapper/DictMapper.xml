<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hdsxtech.mapper.DictMapper">
	<!-- 查询公司 -->
	<select id="getCampany" resultType="com.hdsxtech.entity.CampanyRegist">
		SELECT SOCIETYID,CAMPANYNAME FROM CAMPANY_REGIST ORDER BY UPDATETIME
	</select>
	<!-- 查询车辆-->
	<select id="getCars" parameterType="com.hdsxtech.entity.CarInformation" resultType="com.hdsxtech.entity.CarInformation">
		SELECT SOCIETYID,PLATENUMBER FROM CAR_INFORMATION <!-- WHERE SOCIETYID = #{societyId} -->
		<where>
			<if test="societyId != null and societyId != ''">	
				SOCIETYID = #{societyId}
			</if>
			<if test="plateNumber != null and plateNumber != ''">	
				plateNumber LIKE CONCAT('%',#{plateNumber},'%')
			</if>
		</where>
		ORDER BY UPDATETIME
	</select>
	<!-- 查询字典 -->
	<select id="getDict" parameterType="com.hdsxtech.entity.DictValue" resultType="com.hdsxtech.entity.DictValue">
		select * from dict_value 
		<where>
			<if test="mtype != null and mtype != ''">	
				<!-- mtype = (SELECT mtype FROM dict_type where mtable = #{mtable}) -->
				mtype = #{mtype}
			</if>
			<if test="mcode != null and mcode != ''">
				and mcode = #{mcode} 
			</if>
		</where>
		order by mcode
	</select>
</mapper>